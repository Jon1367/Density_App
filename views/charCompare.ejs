<%- include header.ejs %>

<div class="container">
    <div class="row">
       <h2 class="violet">Character Stats:</h2>
        <h3 class="violet"><%= gamerTag %></h3>
        <br>


      <!--   character div -->
        <div id="chInfo" class="large-6 columns hide">
            <form action="/back" method="Get">
                <input type=""  id="imageIcon1" class="blah" name="character" value="0" />
                <label class='moveDown' for="imageIcon1">
                    <div class="imageBorder">
                        <img class="backgroundPath1" src="http://www.bungie.net<%= character['emblemPath'] %>" width="61px">
                        <img class="backgroundPath2" src="http://www.bungie.net<%= character['backgroundPath'] %>" width="300px">


                        <span class="lvl"><b><%=character['characterLevel']%></b> </span>

                        <span class="gsc"><%=character['characterBase']['grimoireScore']%>  </span>

                        <span class="cls"><% if(character['characterBase']['classHash'] == '3655393761'){ %>
                            Titan
                        <% } else if(character['characterBase']['classHash'] == '2271682572'){ %>  
                            Warlock
                        <% } else { %>
                            Hunter
                        <% } %> </span>


                        <span class="rceGndr"><% if(character['characterBase']['raceHash'] == '3887404748'){ %>
                            Human
                        <% } else if(character['characterBase']['raceHash'] == '898834093'){ %>  
                            Exo
                        <% } else { %>
                            Awoken
                        <% } %>
                        
                        
                        <% if(character['characterBase']['genderType'] == 0){ %>
                            Male
                        <% } else { %>  
                            Female
                        <% } %></span>
                        
                    </div>
                </label>
                
<!-- Character Class unHash -->
        <span ><% if(character['characterBase']['classHash'] == '3655393761'){ %>

                <div class="large-9 columns center">
                    <img src="images/titain.jpg" alt="">
                </div>

                <% } else if(character['characterBase']['classHash'] == '2271682572'){ %>  
                <div class="large-9 columns center">
                    <img src="images/warlock.jpg" alt="">
                </div>
                <% } else { %>
                <div class="large-9 columns center">
                    <img src="images/Hunter.jpg" alt="">
                </div>
        <% } %> </span>
            
            
          
        

